<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout 
        android:layout_width="360dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:padding="5dp">
        <Button 
            android:layout_alignParentLeft="true"
            android:id="@+id/edit_text_close_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/screenhot_close_edit_text"/>
        <EditText
            android:layout_centerInParent="true"
            android:id="@+id/edit_text_text"
            android:textColor="#000000"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/screenhot_shape_white"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            />
        <Button 
            android:layout_alignParentRight="true"
            android:id="@+id/edit_text_yes_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/screenhot_edit_text_yes"/>
    </RelativeLayout>

</RelativeLayout>
